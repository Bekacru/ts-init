{
  "name": "@bekacru/ts-init",
  "module": "dist/index.js",
  "version": "0.1.0",
  "main": "dist/index.js",
  "type": "module",
  "bin": "./dist/index.js",
  "scripts": {
    "dev": "bun run ./src/index.ts",
    "watch": "bun build ./src/index.ts --outdir=./dist --watch",
    "build": "bun run build.ts",
    "release": "bun run build && bumpp && npm publish --access public --no-git-checks"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/prompt": "^1.1.9",
    "bumpp": "^9.5.2",
    "@types/prompts": "^2.4.9",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "prompts": "^2.4.2"
  },
  "files": [
    "dist"
  ]
}